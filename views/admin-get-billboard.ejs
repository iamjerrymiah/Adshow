<%- include('includes/admin-header') %>
    

    <div class="section">
		<div class="container">
			<div class="row g-5">

                
                <div class="col-lg-12" style="margin-top: -50px;">
					<div class="post-entry d-block small-post-entry-v">
						<div class="content">

                            <% bills.forEach(function(bill) { %>
                                <% if(bill.billboard === true){ %> 
                                
                        <% var imgLoop = bill.photo %>
                    <% var photoLoop = imgLoop.split('.').pop() %>
                        <a href="<%= bill.hash %>">
							<div class="post-meta mb-1">
                                <ul class="admin-list blog-sing" style="background-color: rgb(32, 32, 32);">
                                    <% if(photoLoop === 'jpg' || photoLoop === 'JPG'|| photoLoop === 'PNG' || photoLoop === 'png' || photoLoop === 'JPEG' || photoLoop === 'jpeg' || photoLoop === 'GIF' || photoLoop === 'gif' || photoLoop === 'tiff' || photoLoop === 'psd' || photoLoop === 'PDF' || photoLoop === 'pdf') { %>    
                                    <li><img src="images/posts/<%= bill.photo %>" alt="" style="max-width: 100%; height: 80px;"></li>
                                    <% } %>

                                   
							<% if(photoLoop === 'MP4'|| photoLoop === 'mp4' || photoLoop === 'MP2' || photoLoop === 'mp2' || photoLoop === 'WEBM' || photoLoop === 'webm' || photoLoop === 'AVI' || photoLoop === 'avi' || photoLoop === 'ogg' || photoLoop === 'wmv' || photoLoop === 'MOV' || photoLoop === 'mov') { %>
                                        <li><video src="images/posts/<%= bill.photo %>" style="max-width: 100%; height: 80px;" autoplay muted loop></video></li>
                                     <% } %>
                                        
                                    <li>Posted by <%= bill.user.email %>(<strong style="color: white;"><%= bill.user.username %></strong>)</li>

                                    <li>Posted on weekly billboard at <strong style="color: white;"><%= bill.billboardChangedAt.toLocaleString('en-us', {day:'2-digit', month:'long', year:'numeric'}) %></strong></li>

                                    <li>Expires on <strong style="color: white;"><%= bill.billboardExpiresAt.toLocaleString('en-us', {day:'2-digit', month:'long', year:'numeric'}) %></strong></li>
                                </ul>

							</div>
                        </a>
							<% } %>
                            <% }) %>
						</div>
                    </div>
                </div>
                
                
            </div>
        </div>
    </div>




<%- include('includes/footer') %>