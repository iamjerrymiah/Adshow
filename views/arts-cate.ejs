<%- include('includes/header') %>

	<div class="section pt-5 pb-0" style="background-color: rgb(32, 32, 32);">
		<div class="container" style="margin-bottom: -60px;">
			<div class="row">

				<div class="col-lg-12">
					
					<div class="posts-slide-wrap">
						<div class="posts-slide" id="posts-slide">

							<% bills.forEach(function(bill) { %>
								<% if(bill.billboard === true){ %> 
								
						<% var imgLoop = bill.photo %>
					<% var photoLoop = imgLoop.split('.').pop() %>

						<% var headLoop = bill.headline %>
					<% var headlineLoop = headLoop.split('-_-_-_').shift() %>

					<% if(bill.photo !== 'vitualpost.jpg') { %>
							<div class="item">
								<div class="post-entry d-lg-flex">

									<div class="me-lg-5 thumbnail mb-4 mb-lg-0" 
									style="text-align: center; background-color: #000;">

										
											<% if(photoLoop === 'MP4'|| photoLoop === 'mp4' || photoLoop === 'MP2' || photoLoop === 'mp2' || photoLoop === 'WEBM' || photoLoop === 'webm' || photoLoop === 'AVI' || photoLoop === 'avi' || photoLoop === 'ogg' || photoLoop === 'wmv') { %>
											<a href="/<%= bill.slug %>">
												<video src="images/posts/<%= bill.photo %>" 
												style="max-width: 100%; height: 350px;" autoplay muted loop></video>		
											</a>
											<% } %>
				
											<% if(photoLoop === 'jpg' || photoLoop === 'JPG'|| photoLoop === 'PNG' || photoLoop === 'png' || photoLoop === 'JPEG' || photoLoop === 'jpeg' || photoLoop === 'GIF' || photoLoop === 'gif' || photoLoop === 'tiff' || photoLoop === 'psd' || photoLoop === 'PDF' || photoLoop === 'pdf') { %>
												<a href="/<%= bill.slug %>">
												<img src="images/posts/<%= bill.photo %>" alt="" 
												style="max-width: 100%; height: 350px;">
												</a>
											<% } %>
									</div>
									

									<div class="content align-self-center">
										<div class="post-meta mb-3">
											<a href="/<%= bill.slug %>" class="category" style="color: whitesmoke;"><%= bill.category %></a> &mdash;
											<span class="date"><%= bill.createdAt.toLocaleString('en-us', {day:'2-digit', month:'long', year:'numeric'}) %></span>

										</div>
										<h4 ><a href="/<%= bill.slug %>">
											<%= headlineLoop %>
										</a></h4>
										

									</div>
								</div>
							</div>
							<% } %>
							<% } %>

							<% }) %>
							<!-- END .item -->

						</div>
					</div>	
				</div>
			</div>

			<div class="row justify-content-center mb-5">
				<div class="col-lg-7 text-center">
					<h2 class="heading" style="color: #4dc3ff;">Trending Billboard</h2>
				</div>
			</div>
		</div>
	</div>








	<div class="section">
		<div class="container">
			<div class="row g-5">
				
				<% posts.forEach(function(post) { %> 
					<% if(post.category === 'Art'){ %>

					<% var imgLoop = post.photo %>
					<% var photoLoop = imgLoop.split('.').pop() %>

					<% var headLoop = post.headline %>
					<% var headlineLoop = headLoop.split('-_-_-_').shift() %>

					<% if(post.photo !== 'vitualpost.jpg') { %>
				<div class="col-lg-10" style="margin-bottom: -40px;">
					<div class="post-entry d-block small-post-entry-v">
						<div class="content">
						
							<a href="/<%= post.slug %>" class="post-author d-flex align-items-center">
								<div class="author-pic" style="margin-top: 5px;">
									<img src="images/users/<%= post.user.photo %>" alt="Image">
								</div>
								<div class="text">
									<strong style="color: #000;"> @<%= post.user.username %></strong>
								</div>
								</a>
							</div>
							

							<div class="post-meta mb-1">
								<span class="category"><%= post.category %></span> &mdash;

								<span class="date"><%= post.createdAt.toLocaleString('en-us', {day:'2-digit', month:'long', year:'numeric'}) %></span>
								
							</div>

							<h6><a href="/<%= post.slug %>"><%= headlineLoop %></a></h6>
							
						</div>
						<div class="thumbnail" style="background-color: #000; text-align: center;">
						
							
							<% if(photoLoop === 'MP4'|| photoLoop === 'mp4' || photoLoop === 'MP2' || photoLoop === 'mp2' || photoLoop === 'WEBM' || photoLoop === 'webm' || photoLoop === 'AVI' || photoLoop === 'avi' || photoLoop === 'ogg' || photoLoop === 'wmv' || photoLoop === 'MOV' || photoLoop === 'mov') { %>
							<a href="/<%= post.slug %>">
								<video id="player" playsinline controls data-poster="/path/to/poster.jpg" style="max-width: 100%; height: 300px;">
									<source src="images/posts/<%= post.photo %>" />
								  </video>		
							</a>
							<% } %>

							<% if(photoLoop === 'jpg' || photoLoop === 'JPG'|| photoLoop === 'PNG' || photoLoop === 'png' || photoLoop === 'JPEG' || photoLoop === 'jpeg' || photoLoop === 'GIF' || photoLoop === 'gif' || photoLoop === 'tiff' || photoLoop === 'psd' || photoLoop === 'PDF' || photoLoop === 'pdf') { %>
								<a href="/<%= post.slug %>">
								<img src="images/posts/<%= post.photo %>" alt="" 
								class="img-fluid">
								</a>
							<% } %>

							<ul class="admin-list blog-sing" style="height: 60px; background-color: rgb(32, 32, 32);">     
								<li style="margin-top: 15px;"><a href="/<%= post.slug %>"><span class="icon-heart" aria-hidden="true"></span>
									 <%= post.likes.length %> Likes</a></li>
								<li style="margin-top: 15px;"><a href="/<%= post.slug %>"><span class="icon-commenting" aria-hidden="true"></span>
									 <%= post.reviews.length %> Comments</a></li>
							</ul>
						</div>

					</div>
				<% } %>

				<% } %>
				<% }) %>



			</div>
		</div>
	</div>

	

	<%- include('includes/footer') %>